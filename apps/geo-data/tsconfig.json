{
  "compilerOptions": {
    "baseUrl": "./src",
		"allowSyntheticDefaultImports": true,
		"checkJs": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"target": "esnext",
		"module": "es2022",
		"strict": true,
    "outDir": "./dist",
    "paths": {
      "#config/*": [ "./src/config/*" ],
      "#directories/*": [ "./src/directories/*" ],
      "#export-data/*": [ "./src/export-data/*" ],
      "#geonames/*": [ "./src/geonames/*" ],
      "#utils/*": [ "./src/utils/*" ]
    }
  },
  "include": ["./src/**/*.ts", "eslint.config.js"],
  "exclude": ["./coverage", "./dist", "./data", "node_modules", "eslint.config.*"]
}